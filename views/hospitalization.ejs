<%- include("partials/head") %>
<%- include("partials/navbar") %>
<div class="container">
  <!-- Option to choose between US and world -->
  <div id="us-hospitalization" class="mt-4">
    <form>
      <div class="row">
        <!-- State dropdown -->
        <div class="col-4">
          <label class="form-label" for="us-states">Select state(s)</label>
          <select id="us-states" class="form-control selectpicker" multiple>
            <!-- Fill the options using values stored in db -->
          </select>
        </div>
        <!-- From date -->
        <div class="col-4">
          <label class="form-label" for="from-date">From date</label>
          <div class="input-group date" data-provide="datepicker" data-date-format="dd-M-yyyy">
            <input class="form-control" id="from-date" name="from-date" placeholder="dd-M-yyyy" value="01-Jan-2020" type="text"/>  
            <div class="input-group-addon">
                <span class="glyphicon glyphicon-th"></span>
            </div>
          </div>
        </div>
        <!-- To date -->
        <div class="col-4">
          <label class="form-label" for="to-date">To date</label>
          <div class="input-group date" data-provide="datepicker" data-date-format="dd-M-yyyy">
            <input class="form-control" id="to-date" name="to-date" placeholder="dd-M-yyyy" value="01-Jan-2022" type="text"/>  
            <div class="input-group-addon">
                <span class="glyphicon glyphicon-th"></span>
            </div>
          </div>
        </div>
      </div>
      <!-- Submit button -->
      <div class="row mt-4">
        <div class="text-center">
          <button class="btn btn-outline-dark" name="submit" type="submit">Submit</button>
        </div>
      </div>
    </form>
    <div class="mt-4">
      <div id="hospitalization-trend" class="text-center"></div>
    </div>
  </div>
</div>
<!-- JavaScript -->
<script src='/javascripts/hospitalization.js'></script>
<%- include("partials/footer") %>